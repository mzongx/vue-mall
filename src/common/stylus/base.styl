@import './variable.styl'
body, html
  line-height: 1;
  font-size: 10px;
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback';
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  background: $color-background;
  color: $color-text;
body
  font-size: 1.4rem;
a:hover
  color: $color-theme;
  -webkit-transition: color .3s ease-out;
  transition: color .3s ease-out;

/** the page max width **/
.container
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 10px;
@media only screen and (max-width: 767px)
  .container
    padding: 0;
.btn, .btn[href]
  display: inline-block;
  text-align: center;
  font-size: 14px;
  font-family: "moderat", sans-serif;
  font-weight: bold;
  transition: all .3s ease-out;
  border: 1px solid $color-theme;
  color: $color-theme;
  text-transform: uppercase;
  letter-spacing: .25em;
  white-space: nowrap;
  margin-top: 0!important;
.btn
  height: 55px;
  line-height: 54px;
  padding: 0 10px;
.btn--m
  height: 40px;
  line-height: 40px;
.btn-disable
  background: #efefef;
  border-color: #ebebeb;
  color: $color-text-gray;
.btn--dis-2:hover, .btn--orange.btn--dis:hover, .btn--red.btn--dis:hover
  border-color: #ccc !important;
  background: #ccc !important;
  color: #fff !important;
.btn--red, .btn--red[href]
  background-color: #d1434a;
  border-color: #d1434a;
  color: #fff;

.btn--red:hover, .btn--red[href]:hover
  background-color: #f16f75;
  border-color: #f16f75;
  color: #fff;
.header__wrap
.header__primary
.header__secondary
.footer
  padding-right: 36px;
  padding-left: 36px;

/** 普通页面标题 **/
.page-title-normal
  font-family: "moderat", sans-serif;
  color: #333;
.page-title-normal h2
  padding: 40px 0 20px 0;
  font-size: $font-size-large-x;
  text-transform: uppercase;
  letter-spacing: .25em;
  font-weight: bold;
.up-down-btn
  color: #ee7a23;
.i-up-down
  position: relative;
  display: inline-block;
  width: 14px;
  height: 6px;
  vertical-align: middle;
  z-index: 2;
  transform: translateY(2px);
  transition: -webkit-transform .3s ease-out;
  transition: transform .3s ease-out;
  transition: transform .3s ease-out, -webkit-transform .3s ease-out;

.i-up-down i
  position: absolute;
  top: 0;
  width: 8px;
  height: 1px;
  background: #ee7a23;

.i-up-down .i-up-down-l
  left: 0;
  transform: rotate(40deg);
  transition: -webkit-transform .3s ease-out;
  transition: transform .3s ease-out;
  transition: transform .3s ease-out, -webkit-transform .3s ease-out;

.i-up-down .i-up-down-r
  right: 0;
  transform: rotate(-40deg);
  transition: all .3s ease-out;
.up-down-btn.open
  transition: all .3s ease-out;

.up-down-btn.open .i-up-down-l
  transform: rotate(-40deg);
  transition: all .3s ease-out;

.up-down-btn.open .i-up-down-r
  transform: rotate(40deg);
  transition: all .3s ease-out;

/** 普通页面标题 **/
.page-title-normal
  font-family: "moderat", sans-serif;
  color: #333;
.page-title-normal h2
  padding: 40px 0 20px 0;
  font-size: 22px;
  text-transform: uppercase;
  letter-spacing: .25em;
  font-weight: bold;
.section-title-normal
  padding-bottom: 10px;
  font-size: 20px;

/** The normal link **/
.a-link-more
  color: #ee7a23;
  text-decoration: underline;
.hidden
  display: none;
